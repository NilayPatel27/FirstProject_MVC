@model IEnumerable<Contact>

@{
    ViewBag.Title = "Contacts";
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.FullName
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Address
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="bi bi-pencil-square"></i>Edit
                </a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="bi bi-trash"></i>Delete
                </a>
            </td>
        </tr>
    }
</table>
<div style="position:fixed;right:25px; bottom:25px" class="text-white">
    <a asp-controller="Contacts" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add
        New</a>
</div>