@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}
@using (Html.BeginForm("Index", "Actors", FormMethod.Get))

{
    @Html.TextBox("search")
    <input type="submit" name="submit" value="Search" />
}
@if (Model.Count() == 0)
{
    <div class="row text-center">
        <div class="col-md-6 offset-3">
            <h1 class="text-info">No Record Found</h1>
            <hr />
        </div>
    </div>
}
else
{
    <div class="row">
        <div style="width:100%">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Age)</th>
                        <th>@Html.DisplayNameFor(model => model.DOB)</th>
                        <th>@Html.DisplayNameFor(model => model.City)</th>
                        <th>@Html.DisplayNameFor(model => model.Gender)</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">@item.Name</td>
                            <td style="text-align:center">@item.Age</td>
                            <td style="text-align:center">@item.DOB</td>
                            <td style="text-align:center">@item.City</td>
                            <td style="text-align:center">@item.Gender</td>
                            <td class="align-middle" style="text-align:center">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i>Details
                                </a> |
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i>Delete
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>

}
<div style="position:fixed;right:25px; bottom:25px" class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>