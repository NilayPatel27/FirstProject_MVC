@model Director

@{
    ViewData["Title"] = "Delete director";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
        <h1>Delete confirmation @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" readonly />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DOB" class="control-label"></label>
                    <input asp-for="DOB" class="form-control" readonly />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" readonly />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    @if (Model.Gender)
                    {
                        <input  class="form-control" readonly value="Male" />
                    }
                    else
                    {
                        <input  class="form-control" readonly value="Female" />
                    }
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" readonly />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Language" class="control-label"></label>
                    <input asp-for="Language" class="form-control" readonly />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>

                <div class="form-group" >
                    <form>
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" id="btnSubmit" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#btnSubmit').click(function (event) {
                event.preventDefault();
                var directorData = {
                    Id: @Model.Id,
                };
                $.ajax({
                    type: "POST",
                    url: "/Directors/Delete",
                    data: directorData,
                    dataType: "html",
                    contentType: 'application/x-www-form-urlencoded',
                    success: function (data) {
                        window.location.href = "/Directors/Index";
                        alert('Director Deleted Successfully');
                    },
                    error: function (error) {
                        alert("Error occured!!", error)
                    }
                });
            });
        });
    }); 
</script>
